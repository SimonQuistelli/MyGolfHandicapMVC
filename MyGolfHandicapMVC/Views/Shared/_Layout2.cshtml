<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Golf Handicap</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="navbar">
        <a href="javascript:void(0);" onclick="toggleMenu()" class="menu_icon"><i class="fa fa-bars"></i></a><span id="navbar_header" class="navbar_header">@ViewBag.menuheader</span>
    </div>

    <div id="menu_sidepanel" class="sidepanel">
        <a id="test1" href="@Url.Action("handicapindex", "handicapindex")" onclick="selectPage(@ViewBag.menuHeader)">Haindicap Index</a>
        <a id="test2" href="@Url.Action("scorecards", "scorecards")" onclick="selectPage(@ViewBag.menuHeader)">View Scorecards</a>
        <a id="test3" href="@Url.Action("addscorecard", "scorecards")" onclick="selectPage('Submit Scorecard')">Submit Scorecard</a>
        <a id="test4" class="test" href="@Url.Action("logout", "home")">Logout</a>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!---<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
